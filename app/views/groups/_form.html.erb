<%= form_for(@group) do |f| %>
<% if @group.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@group.errors.count, "error") %>
    prohibited this group from being saved:</h2>

  <ul>
    <% @group.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="container">
  <div class="row col-md-offset-4">

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :salle %><br>
      <%= f.text_field :salle %>
    </div>
    <div class="field">
      <%= f.label :tache %><br>
      <%= f.text_area :tache %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
</div>
<% end %>
