<div class="container">

  <h1>Organization</h1>
  <div class="row">

    <% @groups.each do |group| %>
    <div class="col-md-2 inline">
      <strong><%= group.name %>
        <%= group.salle %>
        <%= group.tache %></strong>
      <br>
      <div>
        <% @people.each do |gens|%>
        <% if group.id == gens.group_id %>
        <br><%= best_in_place gens, :name%>
        <%= best_in_place gens, :sensei, :as => :select, :collection => {"1" => "Sensei"} %>
        <% end %>

        <% end %>
      </div>
      <br>

      <span class="glyphicon glyphicon-pencil"> <%= link_to 'Edit', edit_group_path(group) %></span>
      <span class="glyphicon glyphicon-trash"> <%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></span>
    </div>
    <% end %>
  </div>

<br>
  <div class="the_new_group"><span class="glyphicon glyphicon-plus-sign"><%= link_to 'New Group', new_group_path %></span></div>

  <br>

  <h1>Listing People</h1>

  <div id="butn"><span class="glyphicon glyphicon-refresh"><%= link_to 'Random', aleatoire_path %></span></div>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <!-- <th>Email</th> -->
        <!-- <th>Tel</th> -->
        <!-- <th>Group</th> -->
        <th>Sensei</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <!-- <td><%= person.email %></td> -->
        <!-- <td><%= person.tel %></td> -->
        <!-- <td><%= person.group_id %></td> -->
        <td><%= person.sensei %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<script type="text/javascript">
  $(document)
    .ready(function () {
      /* Activating Best In Place */
      $(".best_in_place").best_in_place();
    });
</script>
